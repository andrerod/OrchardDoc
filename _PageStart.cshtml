@{
    var path = Request.PhysicalPath.Trim('\\');
    if (path == Request.PhysicalApplicationPath.Trim('\\')) {
        Page.DocumentTitle = "ADX SDK Documentation";
        Page.Title = Page.DocumentTitle;
        Page.EditUrl = "https://github.com/Azure/adx-documentation-pr/blob/master/README.md";
    }
    else {
        var docName = Path.GetFileNameWithoutExtension(path);
        Page.DocumentTitle = docName.Replace('-', ' ');
        Page.Title = Page.DocumentTitle + " - ADX SDK Documentation";
        Page.EditUrl = "https://github.com/Azure/adx-documentation-pr/blob/master/Documentation/" + docName + ".md";
    }
    Page.IssuesUrl = "https://github.com/Azure/adx-documentation-pr/issues";
    Layout = "_SiteLayout.cshtml";
}